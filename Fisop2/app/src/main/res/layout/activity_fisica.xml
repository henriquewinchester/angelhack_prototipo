<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b5b7f"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#727272"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:text="Luis"
        android:textColor="#fff"
        android:textColorHint="#fff" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="Sobrenome"
        android:inputType="text"
        android:text="Vedolin"
        android:textColorHint="#fff" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="CPF"
        android:inputType="textPersonName"
        android:text="123.456.789-00"
        android:textColorHint="#fff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="Data de nascimento"
        android:inputType="date"
        android:text="15/04/1975"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="Nome da Mae"
        android:inputType="textPersonName"
        android:text="Hildecy Ribeiro Souza Vedolin"
        android:textColorHint="#fff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="AgÃªncia"
        android:inputType="number"
        android:text="1234"
        android:textColorHint="#fff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="Numero da Conta"
        android:inputType="number"
        android:text="123.456-7"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#727272"
        android:hint="Valor"
        android:inputType="number"
        android:text="600,00"
        android:textColor="#fff"
        android:textColorHint="#fff" />

    <Button
        android:id="@+id/theNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#727272"
        android:elevation="4dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Solicitar"
        android:textColor="#fff" />
</LinearLayout>